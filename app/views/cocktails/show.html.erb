<div class="container">
  <div class="cocktail-container">
    <div class="cocktail-image"></div>

      <% if @cocktail.photo.attached? %>

        <div class="cocktail-info" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
          <%= @cocktail.name %>
        </div>

        <% else %>

        <div class="cocktail-info">
          <%= @cocktail.name %>
        </div>

      <% end %>


      <ul class="cocktail-ingredients">
        <% @cocktail.doses.each do |dose| %>
        <div class="cocktail-ingredient">
          <li><%= dose.ingredient.name %> | <%= dose.description %></li>
          <%= link_to dose_path(dose), method: :delete do  %>
            <i class="fas fa-minus-circle"></i>
          <% end %>
        </div>
        <% end %>
          <%= link_to new_cocktail_dose_path(@cocktail), class: "cocktail-add-dose btn btn-primary" do %>
            <i class="fas fa-plus-circle"></i>
            <p>Add ingredient</p>
          <% end %>
          <%= link_to "Come back", cocktails_path %>
      </ul>
  </div>
</div>
